// Convert class name list to jacoco exclude list
// This appends a * to all classes and replace the space separators with commas.
jacoco_exclude = ["__builtin_func:subst <'space' unset> <'comma' unset> __builtin_func:patsubst % %* <'local_classes' unset>"]
android_test {
    name: "CarSystemUITests",

    dxflags: ["--multi-dex"],

    platform_apis: true,
    test_suites: ["device-tests"],

    static_libs: [
        "CarSystemUI-tests",
    ],

    compile_multilib: "both",

    jni_libs: [
        "libdexmakerjvmtiagent",
        "libmultiplejvmtiagentsinterferenceagent",
    ],

    libs: [
        "android.test.runner",
        "telephony-common",
        "android.test.base",
    ],

    aaptflags: [
        "--extra-packages",
        "com.android.systemui",
    ],

    certificate: "platform",

    jacoco: {
        include_filter: ["com.android.systemui.*,com.android.keyguard.*"],
        exclude_filter: jacoco_exclude,
    },
}